<Window x:Class="SpeedMeterApp.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="History" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl x:Name="TabRoot" Margin="8" Background="#111">
            <!-- Overview Tab -->
            <TabItem Header="Overview">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="10" CornerRadius="6" Background="#161616" BorderBrush="#262626" BorderThickness="1">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Orientation="Horizontal" >
                            <StackPanel Width="240">
                                <TextBlock Text="Current Download" Foreground="#CCC" FontSize="12"/>
                                <TextBlock x:Name="TxtOverviewDownload" Text="—" FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                                <TextBlock Text="Current Upload" Foreground="#CCC" FontSize="12" Margin="0,8,0,0"/>
                                <TextBlock x:Name="TxtOverviewUpload" Text="—" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <Grid Margin="10,4" HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Last 24h: " VerticalAlignment="Center" Foreground="#DDD" FontWeight="Bold" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" x:Name="TxtSummary" Foreground="#DDD" VerticalAlignment="Center"/>
                            </Grid>

                            <Separator Margin="12,0" Width="1" Background="#2A2A2A"/>

                            <StackPanel Width="280" Margin="12,0,0,0">
                                <TextBlock Text="Last 24h" Foreground="#CCC" FontSize="12"/>
                                <TextBlock x:Name="Txt24hDown" Text="Down: —" FontSize="16" FontWeight="SemiBold" Margin="0,6,0,0"/>
                                <TextBlock x:Name="Txt24hUp" Text="Up: —" FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>

                            <Separator Margin="12,0" Width="1" Background="#2A2A2A"/>

                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="Totals" Foreground="#CCC" FontSize="12"/>
                                <TextBlock x:Name="TxtTotals" Text="T: — / —" FontSize="14" FontWeight="SemiBold" Margin="0,6,0,0"/>
                                <TextBlock Text="Ping" Foreground="#CCC" FontSize="12" Margin="0,6,0,0"/>
                                <TextBlock x:Name="TxtPing" Text="— ms" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Margin="0,10,0,0" Padding="8" CornerRadius="6" Background="#111" BorderBrush="#262626" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                <TextBlock Text="Mini 24h usage" Foreground="#DDD" FontWeight="Bold" Margin="6,0"/>
                                <TextBlock Text="(hover chart for details)" Foreground="#9A9A9A" Margin="8,0"/>
                            </StackPanel>

                            <Canvas x:Name="OverviewMiniChart" Grid.Row="1" Background="Transparent" />
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Graph Tab -->
            <TabItem Header="Graph">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="8" CornerRadius="6" Background="#0F0F0F" BorderBrush="#262626" BorderThickness="1">
                        <Canvas x:Name="GraphCanvas" Background="Transparent" />
                    </Border>

                    <Border Grid.Row="1" Margin="0,10,0,0" Padding="8" CornerRadius="6" Background="#111" BorderBrush="#262626" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="240"/>
                            </Grid.ColumnDefinitions>

                            <DataGrid x:Name="GridSamples" Grid.Column="0" IsReadOnly="True" AutoGenerateColumns="False" HeadersVisibility="Column" Margin="6" />
                            <StackPanel Grid.Column="1" Margin="8">
                                <Button x:Name="BtnExportCsv" Content="Export CSV" Height="34" Margin="0,0,0,8"/>
                                <Button x:Name="BtnClose" Content="Close" Height="34" Margin="0,0,0,8"/>
                                <TextBlock x:Name="TxtGraphSummary" Text="Summary" Margin="0,12,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="TxtLogPreview" Grid.Row="0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="#0B0B0B" Foreground="#DDD" FontFamily="Consolas" Margin="4"/>
                    <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button x:Name="BtnOpenLogFolder" Content="Open Log Folder" Margin="4" Width="140"/>
                        <Button x:Name="BtnRefreshLogs" Content="Refresh" Margin="4" Width="84"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer Margin="10">
                    <StackPanel>
                        <TextBlock Text="History retention (hours)" Foreground="#DDD"/>
                        <StackPanel Margin="0,6" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox x:Name="TxtRetention" Width="60" Text="24"/>
                            <Button x:Name="BtnApplyRetention" Content="Apply" Margin="8,0"/>
                        </StackPanel>

                        <Separator Margin="0,8"/>

                        <TextBlock Text="Sampling / Refresh" Foreground="#DDD"/>
                        <StackPanel Margin="0,6" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Refresh ms:" VerticalAlignment="Center" Margin="0,4"/>
                            <TextBox x:Name="TxtRefreshMs" Width="80" Text="1000" Margin="8,0"/>
                            <Button x:Name="BtnApplyRefresh" Content="Apply" Margin="8,0"/>
                        </StackPanel>

                        <Separator Margin="0,8"/>

                        <Button x:Name="BtnRestoreDefaults" Content="Restore Defaults" Width="160"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>